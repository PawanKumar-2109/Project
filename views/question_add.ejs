  <table class="rwd-table" style="margin-top: 14%;">
	<form id="add_form" method="post" action="/add">
		<tr>
			<th>Description</th>
			<th>
				<input type="text" name="description" required>
			</th>
		</tr>
		<tr>
			<th>Answer</th>
			<th>
				<input type="text" name="answer" required>
			</th>
		</tr>
		<tr>
			<th>Level</th>
			<th>
				<input type="text" list="city-list" value="" name="level" required>
			</th>
		</tr>
		<tr>
			<th>Topic</th>
			<th>
				<input type="text" list="tag-list" name="tag" required>
			</th>
		</tr>
	</form>
  </table>
  <button type="submit" class="btn" style="margin-left:43%;margin-top: 2%;" form="add_form">Calculate</button>
  <datalist id="city-list">
	<option value="easy"></option>
	<option value="medium"></option>
	<option value="hard"></option>
  </datalist>
  <datalist id="tag-list">
	<% for(var i=0;i<mylist.length;i++){%>
	  <option value="<%=mylist[i].tag%>"></option>
	  <%}%>
  </datalist>